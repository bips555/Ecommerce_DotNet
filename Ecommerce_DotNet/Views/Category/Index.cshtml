@model List<Category>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    List<Category> categoryList;
}
<div class="container">
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-3"> Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

    <div class="row pt-4">
        <div class="col-6">
          
        </div>
        <div class="col-6 text-end pb-3">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary">Create new Category</a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
        <th>Category Name</th>
        <th>Display Order</th>
        <th></th>
        </tr>
    </thead>
    <tbody>
       @foreach(var item in Model.OrderBy(u=>u.DisplayOrder))
       {
           <tr>
                <td> @item.Name</td>
            <td>@item.DisplayOrder</td>
            <td>
                <div class="btn-group w-75" role="group">
                            <a asp-action="Edit" asp-controller="Category" asp-route-id = "@item.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash3-fill"></i>Delete</a>
                </div>
            </td>
              </tr>
          
       }  
    </tbody>
</table>
</div>
</div>
</div>