@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 border-top border-5 rounded d-flex flex-column h-100">
                        <div class="position-relative">
                          @if(item.ProductImages!=null && item.ProductImages.Count()>0)
                          {
                              <img src="@item.ProductImages.FirstOrDefault().ImageUrl" class="card-img-top rounded"/>
                          }
                          else{
                                <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />

                          }
                            <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
                            <div class="position-absolute top-50 start-50 translate-middle text-white w-100 text-center">
                                <p class="h5">@item.Title</p>
                                <p>by <b>@item.Author</b></p>
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column justify-content-between flex-grow-1 pb-0">
                            <p class="card-title text-warning text-center">by <b>@item.Author</b></p>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-center mb-0">
                                List Price:<span class="text-decoration-line-through">
                                    @item.ListPrice.ToString("c")
                                </span>
                            </p>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-center">
                                As low as:
                                <span>
                                    @item.Price100.ToString("c")
                                </span>
                            </p>
                        </div>
                        <a asp-action="Details" asp-route-productId="@item.Id" class="btn btn-primary bg-gradient border-0 form-control">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
