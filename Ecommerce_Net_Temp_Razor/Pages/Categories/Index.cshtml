@page
@model Ecommerce_Net_Temp_Razor.Pages.Categories.IndexModel
@{
}
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end pb-3">
            <a asp-page="/categories/create" class="btn btn-primary">Create new Category</a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td> @item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div class="btn-group w-75" role="group">
                            <a asp-page="/categories/edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-page="/categories/delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash3-fill"></i>Delete</a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
