@page
@model Ecommerce_Net_Temp_Razor.Pages.Categories.DeleteModel
<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
        </div>
        <div class="mb-3 row">
            <label asp-for="Category.Name" class="p-1"></label>
            <input asp-for="Category.Name" class="form-control" disabled />

        </div>
        <div class="mb-3 row">
            <label asp-for="Category.DisplayOrder" class="p-1"></label>
            <input asp-for="Category.DisplayOrder" class="form-control" disabled />

        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 ">
                <a asp-page="/categories/index" class="form-control btn btn-outline-secondary">Back to List</a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}